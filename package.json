{
  "name": "@retronew/adonis-magnify",
  "description": "Plug and play full-text search for your Adonis application.",
  "version": "0.2.6",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./commands": "./build/commands/main.js",
    "./magnify_provider": "./build/providers/magnify_provider.js",
    "./services/main": "./build/services/main.js",
    "./types": "./build/src/types.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "index:commands": "adonis-kit index build/commands",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "test": "c8 npm run quick:test",
    "prebuild": "npm run clean",
    "build": "tsc && npm run copy:templates && npm run index:commands",
    "dev": "tsc --watch"
  },
  "keywords": [
    "adonis",
    "adonisjs",
    "search",
    "algolia",
    "typesense",
    "meilisearch",
    "typescript"
  ],
  "author": {
    "name": "Martin Paucot",
    "email": "contact@martin-paucot.fr"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/retronew/adonis-magnify"
  },
  "license": "MIT",
  "dependencies": {
    "@adonisjs/tsconfig": "^1.4.0"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.17.2",
    "@adonisjs/lucid": "^21.6.0",
    "@japa/assert": "^4.0.1",
    "@japa/expect-type": "^2.0.3",
    "@japa/file-system": "^2.3.2",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.2.0",
    "@swc/core": "1.10.17",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.13.4",
    "@types/sinon": "^17.0.3",
    "algoliasearch": "^5.18.0",
    "better-sqlite3": "^11.8.1",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "del-cli": "^6.0.0",
    "luxon": "^3.5.0",
    "meilisearch": "^0.47.0",
    "prettier": "^3.5.1",
    "reflect-metadata": "^0.2.2",
    "sinon": "^19.0.2",
    "testcontainers": "^10.18.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typesense": "^1.8.2"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0",
    "@adonisjs/lucid": "^21.2.0",
    "luxon": "^3.5.0"
  },
  "optionalDependencies": {
    "algoliasearch": "^5.20.3",
    "meilisearch": "^0.49.0",
    "typesense": "^2.0.1"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
